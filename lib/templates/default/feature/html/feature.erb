<div class="feature">
	<div class="title">
		<span class="pre"><%= @feature.keyword %>:</span>
		<span class="name"><%= @feature.value %></span>
	</div>

	<div class="meta">
		<div class="file"><%= h(@feature.file) %></div>
		<div class="tags">
			<% @feature.tags.each do |tag| %>
			<a href="<%= url_for tag %>"><%= tag.value %></a>
			<% end %>
		</div>		
	</div>

	<div class="description">
		<%= @feature.description %>
	</div>

	<%= yieldall %>
</div>

